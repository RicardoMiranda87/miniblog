<h2>Login</h2>

<%= form_with scope: :user, url: user_session_path, local: true do |form| %>
  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= form.label :password %><br />
    <%= form.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= form.submit "Login" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
