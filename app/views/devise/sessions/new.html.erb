<div class="container my-5">
  <div class="content-wrapper p-4 bg-white rounded shadow-sm">
    <h2 class="mb-4 text-center">Login</h2>
    <%= form_with scope: :user, url: user_session_path, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <br>
      <div class="d-grid gap-2">
        <%= form.submit "Login", class: "btn btn-primary" %>
        <%= link_to "Register", new_user_registration_path, class: "nav-link btn btn-success ms-2" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
