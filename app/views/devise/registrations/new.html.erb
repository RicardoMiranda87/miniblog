<div class="container my-5">
  <div class="content-wrapper p-4 bg-white rounded shadow-sm">
    <h2 class="mb-4 text-center">Registrar</h2>
    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |form| %>
      <% if resource.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(resource.errors.count, "erro") %> proibiram este registro:</h2>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="d-grid gap-2">
        <%= form.submit "Registrar", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
