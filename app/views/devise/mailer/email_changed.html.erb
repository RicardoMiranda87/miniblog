<div class="container my-5">
  <div class="content-wrapper p-4 bg-white rounded shadow-sm">
    <h2 class="mb-4 text-center">Hello, <%= @resource.email %>!</h2>
    <% if @resource.try(:unconfirmed_email?) %>
      <p class="lead">We're contacting you to notify you that your email is being changed to <%= @resource.unconfirmed_email %>.</p>
    <% else %>
      <p class="lead">We're contacting you to notify you that your email has been changed to <%= @resource.email %>.</p>
    <% end %>
  </div>
</div>
