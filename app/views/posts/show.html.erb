<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<% if @post.image.attached? %>
  <%= image_tag @post.image %>
<% end %>

<small>Por <%= @post.user.name %></small>

<%= link_to 'Voltar', posts_path %>
<%= link_to 'Editar', edit_post_path(@post) %> |
<%= link_to 'Excluir', @post, method: :delete, data: { confirm: 'Tem certeza?' } %>
