<div class="container mt-5">
  <h1 class="mb-4 text-primary text-center">All Posts</h1>
  <%= link_to 'New Post', new_post_path, class: "btn btn-primary mb-4 d-block mx-auto margin-left-1" %>
  <br>
  <br>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
    <% @posts.each do |post| %>
      <div class="col">
        <div class="card h-100 border-0 shadow-sm rounded-3 post-card">
          <div class="card-body d-flex flex-column">
            <h2 class="card-title h5 text-primary"><%= post.title %></h2>
            <p class="card-text text-muted"><%= truncate(post.body, length: 120) %></p>
            <p class="card-text mt-auto"><small class="text-muted">Posted by <%= post.user.name %></small></p>
            <% if post.user == current_user %>
              <div class="d-flex justify-content-between mt-3">
                <%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-primary btn-sm" %>
                <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal-<%= post.id %>">
                  Delete
                </button>
              </div>
            <% end %>
          </div>
        </div>
        <br>
      </div>
      
      <!-- Modal de confirmação de exclusão -->
      <% if post.user == current_user %>
        <div class="modal fade" id="deleteModal-<%= post.id %>" tabindex="-1" aria-labelledby="deleteModalLabel-<%= post.id %>" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel-<%= post.id %>">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to delete this post?
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <%= link_to 'Delete', post, method: :delete, class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
